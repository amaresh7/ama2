node('MAVEN') {
    stage('SCM') {
       git 'https://github.com/amaresh7/ama2.git'
}
    stage('mvn') {
       sh label: '', script: 'mvn package'
}
    stage('PBA') {
       archiveArtifacts 'target/*.jar'
}
    stage('deployment to tomcat') {
    sshagent(['tomcat-dev']) {
      sh 'scp -o StrictHostKeyChecking=no target/*.war jenkins@172.31.34.240:~'
}
}
}
